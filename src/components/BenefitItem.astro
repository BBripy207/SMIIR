---
interface Props {
    icon: string;
    title: string;
    description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="benefit-item">
    <i class={icon}></i>
    <h3>{title}</h3>
    <p>{description}</p>
</div>

<style>
    .benefit-item {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        text-align: center;
        transition: all 0.3s ease;
    }

    .benefit-item:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(59, 130, 246, 0.3);
        transform: translateY(-4px);
    }

    .benefit-item i {
        font-size: 2.5rem;
        color: #3b82f6;
        margin-bottom: 1rem;
    }

    .benefit-item h3 {
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0 0 0.5rem;
    }

    .benefit-item p {
        color: #b3b3b3;
        margin: 0;
        line-height: 1.4;
    }
</style>
