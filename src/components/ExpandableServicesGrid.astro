---
interface ServiceItem {
    icon: string;
    title: string;
    link?: string;
}

interface ServiceCategory {
    icon: string;
    title: string;
    items: ServiceItem[];
}

interface Props {
    services: any[];
}

const { services } = Astro.props as Props;
---

<div class="services">
    {
        services.map((service: any, index: number) => (
            <div class="category">
                <button
                    class="header"
                    onclick={`toggle(${index})`}
                    type="button"
                >
                    <i class={service.icon} />
                    <h2>{service.title}</h2>
                    <i class="fas fa-chevron-down arrow" />
                </button>
                <div class="content" id={`content-${index}`}>
                    {service.items.map((item: any) => (
                        <div class="item">
                            <i class={item.icon} />
                            {item.link ? (
                                <a
                                    href={item.link}
                                    class="item-link"
                                    target={item.link.startsWith('http') ? '_blank' : '_self'}
                                    rel={item.link.startsWith('http') ? 'noopener noreferrer' : undefined}
                                >
                                    <h3>{item.title}</h3>
                                </a>
                            ) : (
                                <h3>{item.title}</h3>
                            )}
                        </div>
                    ))}
                </div>
            </div>
        ))
    }
</div>

<style>
    .services {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .category {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
    }
    .category:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(59, 130, 246, 0.3);
    }
    .header {
        display: flex;
        align-items: center;
        padding: 1.5rem 2rem;
        width: 100%;
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        border-left: 4px solid #3b82f6;
        transition: background 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .header:hover {
        background: rgba(255, 255, 255, 0.05);
    }
    .header i:first-child {
        font-size: 1.5rem;
        color: #3b82f6;
        margin-right: 1rem;
    }
    .header h2 {
        flex: 1;
        margin: 0;
        font-size: 1.3rem;
        font-weight: 700;
        text-align: left;
    }
    .arrow {
        font-size: 1rem;
        color: #3b82f6;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .header.active .arrow {
        transform: rotate(180deg);
    }
    .content {
        max-height: 0;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.02);
        transition:
            max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1),
            opacity 0.3s ease;
        opacity: 0;
    }
    .content.active {
        max-height: 1000px;
        opacity: 1;
    }
    .item {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        gap: 1rem;
    }
    .item:last-child {
        border-bottom: none;
    }
    .item i {
        font-size: 1.2rem;
        color: #3b82f6;
        margin-top: 0.2rem;
        min-width: 20px;
    }
    .item h3 {
        margin: 0 0 0.5rem;
        color: white;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .item-link {
        text-decoration: none;
        color: inherit;
        transition: color 0.3s ease;
    }

    .item-link:hover h3 {
        color: #3b82f6;
    }

    .item p {
        margin: 0;
        color: #b3b3b3;
        line-height: 1.5;
        font-size: 0.95rem;
    }
    @media (max-width: 768px) {
        .services {
            padding: 0 1rem 2rem;
        }
        .header {
            padding: 1rem 1.5rem;
        }
        .header h2 {
            font-size: 1.1rem;
        }
        .item {
            padding: 1rem 1.5rem;
            flex-direction: column;
            gap: 0.5rem;
        }
        .item i {
            margin-top: 0;
        }
    }
    @media (max-width: 480px) {
        .header {
            padding: 0.8rem 1rem;
        }
        .header h2 {
            font-size: 1rem;
        }
        .item {
            padding: 0.8rem 1rem;
        }
    }
</style>

<script is:inline>
    function toggle(i) {
        const currentContent = document.getElementById(`content-${i}`);
        const currentHeader = currentContent.previousElementSibling;
        const isCurrentOpen = currentContent.classList.contains('active');

        // Si ya está abierto, cerrarlo
        if (isCurrentOpen) {
            currentContent.classList.remove('active');
            currentHeader.classList.remove('active');
            return;
        }

        // Cerrar todos los otros menús suavemente
        const allActiveContents = document.querySelectorAll('.content.active');
        const allActiveHeaders = document.querySelectorAll('.header.active');

        allActiveContents.forEach(el => {
            el.classList.remove('active');
        });
        allActiveHeaders.forEach(el => {
            el.classList.remove('active');
        });

        // Pequeño delay para permitir que se cierren los otros antes de abrir el nuevo
        setTimeout(() => {
            currentContent.classList.add('active');
            currentHeader.classList.add('active');
        }, 100);
    }
</script>
