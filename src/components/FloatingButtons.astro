---
// Botones flotantes de contacto
---

<style>
    /* Botones flotantes fijos en pantalla */
    .floating-buttons {
        position: fixed;
        bottom: 100px;
        right: 30px;
        display: flex;
        flex-direction: column;
        gap: 15px;
        z-index: 2000;
    }

    .floating-btn {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: white;
        font-size: 24px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.2);
        position: relative;
        overflow: visible;
        background: linear-gradient(135deg, #2e4bc6 0%, #1e3a8a 100%);
    }

    .floating-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
    }

    /* Botón de WhatsApp */
    .floating-btn.whatsapp {
        background: linear-gradient(135deg, #2e4bc6 0%, #1e3a8a 100%);
    }

    /* Botón de teléfono */
    .floating-btn.phone {
        background: linear-gradient(135deg, #2e4bc6 0%, #1e3a8a 100%);
    }

    /* Botón de Instagram */
    .floating-btn.instagram {
        background: linear-gradient(135deg, #2e4bc6 0%, #1e3a8a 100%);
    }

    /* Botón de Email */
    .floating-btn.email {
        background: linear-gradient(135deg, #2e4bc6 0%, #1e3a8a 100%);
    }

    .floating-btn.phone:hover {
        background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 10px 25px rgba(46, 75, 198, 0.4);
        border-color: rgba(255, 255, 255, 0.3);
    }

    /* Botón de Email */
    .floating-btn.email {
        background: linear-gradient(135deg, #2e4bc6 0%, #1e3a8a 100%);
    }

    /* Efecto de pulso para todos los botones */
    .floating-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border-radius: 50%;
        background: rgba(46, 75, 198, 0.4);
        animation: pulse-simir 3s infinite;
        z-index: -1;
    }

    @keyframes pulse-simir {
        0% {
            transform: scale(1);
            opacity: 0.8;
        }
        70% {
            transform: scale(1.2);
            opacity: 0;
        }
        100% {
            transform: scale(1.2);
            opacity: 0;
        }
    }

    /* Botón de scroll to top - aparece con scroll */
    .floating-btn.scroll-to-top {
        cursor: pointer;
        border: none;
        opacity: 0;
        visibility: hidden;
        transform: translateY(20px);
        transition: all 0.3s ease;
    }

    .floating-btn.scroll-to-top.show {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    /* Scroll suave */
    html {
        scroll-behavior: smooth;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .floating-buttons {
            bottom: 120px;
            right: 15px;
            gap: 12px;
        }

        .floating-btn {
            width: 50px;
            height: 50px;
            font-size: 20px;
        }
    }
</style>

<div class="floating-buttons">
    <a href="#top" class="floating-btn scroll-to-top" id="scrollBtn">
        <i class="fas fa-chevron-up"></i>
    </a>

    <a href="mailto:ricardo@smiir.com.mx" class="floating-btn email">
        <i class="fas fa-envelope"></i>
    </a>

    <a
        href="https://wa.me/message/PGBVC2B2SREDG1"
        class="floating-btn whatsapp"
        target="_blank"
        id="whatsappBtn"
    >
        <i class="fab fa-whatsapp"></i>
    </a>

    <a href="tel:+526145518651" class="floating-btn phone">
        <i class="fas fa-phone"></i>
    </a>
</div>

<script is:inline>
    // Simple y directo
    window.addEventListener('scroll', function () {
        const btn = document.getElementById('scrollBtn');
        if (window.scrollY > 300) {
            btn.classList.add('show');
        } else {
            btn.classList.remove('show');
        }
    });

    // WhatsApp - Detectar dispositivo
    document.addEventListener('DOMContentLoaded', function () {
        const whatsappBtn = document.getElementById('whatsappBtn');
        const isMobile =
            /Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(
                navigator.userAgent
            );

        if (isMobile) {
            // Móvil - Abrir app de WhatsApp
            whatsappBtn.href = 'https://wa.me/message/PGBVC2B2SREDG1';
        } else {
            // Desktop - Abrir WhatsApp Web
            whatsappBtn.href =
                'https://web.whatsapp.com/send?phone=526145518651&text=Hola,%20me%20interesa%20información%20sobre%20sus%20robots';
        }
    });
</script>
