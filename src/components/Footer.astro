---
// Año dinámico
const currentYear = new Date().getFullYear();
---

<footer class="footer-minimal">
    <div class="footer-content">
        <div class="footer-logo">
            <img
                src="/assets/images/simir.png"
                alt="SMIIR"
                class="logo-minimal"
            />
        </div>

        <div class="footer-contact-section">
            <a
                href="https://www.instagram.com/smiir_official?igsh=MW1uYXRjaGc4Nmw1cw%3D%3D&utm_source=qr"
                target="_blank"
                class="social-link"
            >
                <i class="fab fa-instagram"></i>
            </a>
            <div class="footer-text">
                <p>Contacto: +52 614 551 8651</p>
                <p>&copy; {currentYear} SMIIR. Todos los derechos reservados.</p>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer-minimal {
        background: #0a0a0a;
        padding: 1.5rem 0;
        border-top: 1px solid #1a1a1a;
        margin-top: 3rem;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 2rem;
    }

    .footer-logo-section {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .footer-contact-section {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .footer-social {
        display: flex;
        gap: 1rem;
    }

    .social-link {
        color: #888;
        font-size: 1.5rem;
        transition: color 0.3s ease;
        text-decoration: none;
    }

    .social-link:hover {
        color: #2e4bc6;
    }

    .logo-minimal {
        height: 30px;
        width: auto;
    }

    .footer-text p {
        color: #888;
        font-size: 0.8rem;
        margin: 0;
        font-weight: 300;
    }

    @media (max-width: 768px) {
        .footer-content {
            padding: 0 1rem;
            /* MANTENER horizontal - logo izquierda, resto derecha */
        }
        
        .footer-contact-section {
            flex-direction: column;
            align-items: flex-end;
            gap: 0.5rem;
        }
        
        .footer-text {
            text-align: right;
        }
        
        .footer-text p {
            font-size: 0.7rem;
        }
    }
</style>
