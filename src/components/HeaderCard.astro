---
// Componente reutilizable para tarjetas del header - DISEÑO EXACTO ORIGINAL
interface Props {
    href: string;
    imageSrc?: string;
    iconClass?: string;
    title: string;
    alt?: string;
}

const { href, imageSrc, iconClass, title, alt } = Astro.props;
---

<a href={href} class="header-card">
    {
        imageSrc ? (
            <img src={imageSrc} alt={alt || title} class="card-icon-large" />
        ) : (
            <div class="card-icon-container">
                <i class={iconClass} />
            </div>
        )
    }
    <div class="card-text">
        <h2 class="card-title">{title}</h2>
    </div>
</a>

<style>
    /* DISEÑO EXACTO COMO ANTES - VERTICAL */
    .header-card {
        background: linear-gradient(
            135deg,
            rgba(30, 58, 138, 0.15) 0%,
            rgba(59, 130, 246, 0.15) 100%
        );
        border: 1px solid rgba(30, 58, 138, 0.3);
        border-radius: 16px;
        padding: 8px 6px 6px 6px;
        text-decoration: none;
        color: #f5f5f7;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        width: 110px;
        height: 130px;
        backdrop-filter: blur(10px);
    }

    .header-card:hover {
        background: linear-gradient(
            135deg,
            rgba(30, 58, 138, 0.25) 0%,
            rgba(59, 130, 246, 0.25) 100%
        );
        border-color: rgba(30, 58, 138, 0.5);
        box-shadow: 0 8px 32px rgba(30, 58, 138, 0.2);
        color: #ffffff;
    }

    .card-icon-large {
        width: 85px;
        height: 85px;
        border-radius: 12px;
        object-fit: cover;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    }

    .card-icon-container {
        width: 85px;
        height: 85px;
        background: linear-gradient(135deg, #2e4bc6 0%, #1e3a8a 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    }

    .card-icon-container i {
        font-size: 32px;
        color: white;
    }

    .card-text {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0;
        margin-top: 0;
        flex: 1;
        justify-content: center;
    }

    .card-title {
        font-size: 12px;
        font-weight: 400;
        margin: 0;
        line-height: 1;
        text-align: center;
        color: #f5f5f7;
    }

    @media (max-width: 768px) {
        .header-card {
            width: 95px;
            height: 115px;
            padding: 6px 4px 4px 4px;
            gap: 2px;
        }

        .card-icon-large,
        .card-icon-container {
            width: 70px;
            height: 70px;
        }

        .card-icon-container i {
            font-size: 28px;
        }

        .card-title {
            font-size: 10px;
        }
    }
</style>
