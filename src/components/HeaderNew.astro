---
// Header estilo Apple limpio - logo y tarjetas
import HeaderCard from './HeaderCard.astro';
---

<header class="apple-header">
    <div class="header-content">
        <a href="/">
            <img src="/assets/images/simir.png" alt="SIMIR" class="logo" />
        </a>

        <HeaderCard
            href="/productos"
            imageSrc="/assets/images/portadas/dinerbott10.png"
            title="DINERBOTS"
            alt="DINERBOT T10"
        />

        <HeaderCard
            href="/robots-industriales"
            imageSrc="/assets/images/portadas/KENON-S300.png"
            title="ROBOTS INDUSTRIALES"
            alt="KENON-S300"
        />

        <HeaderCard
            href="/contacto"
            iconClass="fas fa-envelope"
            title="CONTACTO"
        />
    </div>
</header>

<style>
    /* Header estilo Apple limpio */
    .apple-header {
        background: transparent;
        position: static;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 8px 0;
        min-height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .header-content {
        max-width: 1200px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 0 20px;
        gap: 40px;
    }

    .logo {
        height: 130px;
        width: 110px;
        object-fit: contain;
        flex-shrink: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .apple-header {
            overflow-x: auto;
            overflow-y: hidden;
            padding: 8px 0;
            width: 100vw;
        }

        .header-content {
            justify-content: flex-start;
            gap: 20px;
            padding: 0 20px;
            min-width: 600px;
            width: 600px;
            max-width: none;
            display: flex;
            flex-wrap: nowrap;
            overflow-x: visible;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }

        .header-content::-webkit-scrollbar {
            display: none;
        }

        .logo {
            height: 115px;
            width: 95px;
            object-fit: contain;
            flex-shrink: 0;
            min-width: 95px;
        }
    }

    html {
        scroll-behavior: smooth;
    }
</style>
