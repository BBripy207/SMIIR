// Header estilo Apple limpio - solo logo y productos a la izquierda
---

<style>
/* Header estilo Apple limpio */
.apple-header {
    background: rgba(0, 0, 0, 0.92);
    backdrop-filter: blur(20px);
    position: static;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 8px 0;
    min-height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.header-content {
    max-width: 1200px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 0 20px;
    gap: 40px;
}

.logo {
    height: 130px;
    width: 110px;
    object-fit: contain;
    flex-shrink: 0;
}

/* Tarjeta de Productos estilo iPhone */
.products-card {
    background: linear-gradient(135deg, rgba(30, 58, 138, 0.15) 0%, rgba(59, 130, 246, 0.15) 100%);
    border: 1px solid rgba(30, 58, 138, 0.3);
    border-radius: 16px;
    padding: 8px 6px 6px 6px;
    text-decoration: none;
    color: #f5f5f7;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    width: 110px;
    height: 130px;
    backdrop-filter: blur(10px);
}

.products-card:hover {
    background: linear-gradient(135deg, rgba(30, 58, 138, 0.25) 0%, rgba(59, 130, 246, 0.25) 100%);
    border-color: rgba(30, 58, 138, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(30, 58, 138, 0.2);
    color: #ffffff;
}

.product-icon-large {
    width: 85px;
    height: 85px;
    border-radius: 12px;
    object-fit: cover;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
}

.product-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    margin-top: 0;
    flex: 1;
    justify-content: center;
}

.product-title {
    font-size: 12px;
    font-weight: 400;
    margin: 0;
    line-height: 1;
    text-align: center;
}

/* Responsive */
@media (max-width: 768px) {
    .header-content {
        justify-content: flex-start;
        gap: 20px;
        padding-left: 20px;
    }
    
    .logo {
        height: 115px;
        width: 95px;
        object-fit: contain;
    }
    
    .products-card {
        width: 95px;
        height: 115px;
        padding: 6px 4px 4px 4px;
        gap: 2px;
    }
    
    .product-icon-large {
        width: 70px;
        height: 70px;
    }
    
    .apple-header {
        min-height: 90px;
        padding: 8px 0;
    }
}
</style>

<header class="apple-header">
    <div class="header-content">
        <a href="/">
            <img src="/assets/images/simir.png" alt="SIMIR" class="logo">
        </a>
        
        <a href="/productos" class="products-card">
            <img src="/assets/images/1.png" alt="DINERBOT T10" class="product-icon-large">
            <div class="product-text">
                <h2 class="product-title">DINERBOTS</h2>
            </div>
        </a>
    </div>
</header>

