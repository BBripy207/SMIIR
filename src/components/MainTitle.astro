---
export interface Props {
    robotName: string;
    version: string;
}

const { robotName, version } = Astro.props;
---

<h1 class="main-title">
    {robotName}
    <span class="highlight">{version}</span>
</h1>

<style>
    .main-title {
        font-size: clamp(2.625rem, 6vw, 6rem) !important;
        font-weight: 900;
        letter-spacing: -0.02em;
        margin-bottom: 2rem;
        background: linear-gradient(135deg, #ffffff 0%, #e0e0e0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(255, 255, 255, 0.3);
        line-height: 1.1;
    }

    .main-title .highlight {
        color: #1e3a8a;
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(30, 58, 138, 0.5);
    }

    /* Responsive - 25% más pequeño */
    @media (max-width: 1024px) {
        .main-title {
            font-size: clamp(1.875rem, 6vw, 3rem) !important;
        }
    }

    @media (max-width: 768px) {
        .main-title {
            font-size: clamp(1.5rem, 10vw, 3rem) !important;
        }
    }
</style>
