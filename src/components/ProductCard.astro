---
import { Image } from 'astro:assets';

export interface Props {
    name: string;
    description: string;
    features: string[];
    imageUrl: string;
    imageAlt: string;
    linkUrl: string;
    ctaText?: string;
}

const {
    name,
    description,
    features,
    imageUrl,
    imageAlt,
    linkUrl,
    ctaText = 'Ver Detalles',
} = Astro.props;
---

<a href={linkUrl} class="product-card">
    <div class="product-image">
        <Image src={imageUrl} alt={imageAlt} width={200} height={200} />
    </div>
    <h2 class="product-name">{name}</h2>
    <p class="product-description">
        {description}
    </p>
    <ul class="product-features">
        {features.map(feature => <li>{feature}</li>)}
    </ul>
    <span class="cta-button">{ctaText}</span>
</a>

<style>
    .product-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 24px;
        text-decoration: none;
        color: #f5f5f7;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

    .product-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            135deg,
            rgba(30, 58, 138, 0.1) 0%,
            rgba(59, 130, 246, 0.1) 100%
        );
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .product-card:hover::before {
        opacity: 1;
    }

    .product-card:hover {
        border-color: rgba(30, 58, 138, 0.5);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .product-image {
        width: 200px;
        height: 200px;
        margin: 0 auto 20px;
        border-radius: 16px;
        overflow: hidden;
        position: relative;
        z-index: 1;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    /* CSS específico para DINERBOT T11 - enfoque más arriba */
    .product-image img[alt*="T11"] {
        object-position: center 15%;
    }

    .product-name {
        font-size: 1.6rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        position: relative;
        z-index: 1;
    }

    .product-description {
        font-size: 0.9rem;
        color: #a1a1aa;
        margin-bottom: 1.5rem;
        line-height: 1.5;
        position: relative;
        z-index: 1;
    }

    .product-features {
        list-style: none;
        text-align: left;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 1;
    }

    .product-features li {
        padding: 6px 0;
        padding-left: 18px;
        position: relative;
        color: #d1d1d6;
        font-size: 0.9rem;
    }

    .product-features li::before {
        content: '✓';
        position: absolute;
        left: 0;
        color: #1e3a8a;
        font-weight: bold;
    }

    .cta-button {
        display: inline-block;
        padding: 10px 24px;
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        color: white;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .cta-button:hover {
        box-shadow: 0 8px 25px rgba(30, 58, 138, 0.4);
    }
</style>
