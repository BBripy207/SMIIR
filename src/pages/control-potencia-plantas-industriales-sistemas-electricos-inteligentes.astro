---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import ServiceHero from '../components/ServiceHero.astro';
import IntroSection from '../components/IntroSection.astro';
import BenefitsSection from '../components/BenefitsSection.astro';
import ServicesGrid from '../components/ServicesGrid.astro';

const title =
    'Control de potencia en plantas industriales y sistemas eléctricos inteligentes | SMIIR';
const description =
    'SMIIR diseña e implementa sistemas de control de potencia orientados a la gestión eficiente de la energía eléctrica en entornos industriales y comerciales de alta demanda. Los proyectos se desarrollan con base en normas NOM-001-SEDE, IEEE, IEC y NFPA 70E, asegurando confiabilidad, seguridad y desempeño continuo.';

const disenoDimensionamiento = [
    {
        icon: 'fas fa-calculator',
        title: 'Cálculo de Capacidad',
        description:
            'Cálculo de capacidad instalada, factor de potencia y demanda máxima conforme a la operación del proceso industrial',
    },
    {
        icon: 'fas fa-cogs',
        title: 'Selección de Equipos',
        description:
            'Selección de tableros de distribución, bancos de capacitores, transformadores y sistemas de respaldo con criterios de eficiencia energética',
    },
    {
        icon: 'fas fa-sitemap',
        title: 'Modelado Unifilar',
        description:
            'Modelado unifilar y coordinación de protecciones para prevenir sobrecargas, cortocircuitos o pérdidas por desequilibrio',
    },
    {
        icon: 'fas fa-tachometer-alt',
        title: 'Medición Inteligente',
        description:
            'Implementación de sensores y medidores inteligentes para monitoreo en tiempo real de corriente, voltaje y consumo energético',
    },
];

const automatizacionGestion = [
    {
        icon: 'fas fa-microchip',
        title: 'Integración PLC y SCADA',
        description:
            'Integración de sistemas PLC y SCADA para control y supervisión de circuitos de potencia, motores y cargas críticas',
    },
    {
        icon: 'fas fa-play-circle',
        title: 'Secuencias Automáticas',
        description:
            'Programación de secuencias automáticas de arranque, paro y conmutación para reducir picos de demanda',
    },
    {
        icon: 'fas fa-cloud',
        title: 'Comunicación IoT',
        description:
            'Comunicación con plataformas IoT o BMS para análisis de consumo, alarmas de sobrecarga y mantenimiento predictivo',
    },
    {
        icon: 'fas fa-chart-bar',
        title: 'Tableros Inteligentes',
        description:
            'Configuración de tableros inteligentes con medición avanzada (kWh, kVARh, kW, FP) y visualización gráfica',
    },
];

const sistemasInteligentes = [
    {
        icon: 'fas fa-exchange-alt',
        title: 'Redes Inteligentes',
        description:
            'Implementación de redes eléctricas inteligentes con conmutación automática (ATS), control remoto y respaldo UPS',
    },
    {
        icon: 'fas fa-solar-panel',
        title: 'Energías Renovables',
        description:
            'Integración con energías renovables y bancos de baterías para operación híbrida o autónoma',
    },
    {
        icon: 'fas fa-sync',
        title: 'Sincronización de Generadores',
        description:
            'Sincronización de generadores y gestión dinámica de potencia activa y reactiva',
    },
    {
        icon: 'fas fa-expand-arrows-alt',
        title: 'Diseño Escalable',
        description:
            'Diseño preparado para crecimiento modular y expansión futura sin interrupciones de servicio',
    },
];

const normativas = [
    {
        icon: 'fas fa-certificate',
        title: 'NOM-001-SEDE',
        description:
            'Cumplimiento con normas mexicanas de instalaciones eléctricas',
    },
    {
        icon: 'fas fa-globe',
        title: 'IEEE e IEC',
        description:
            'Estándares internacionales de sistemas eléctricos y energéticos',
    },
    {
        icon: 'fas fa-hard-hat',
        title: 'NFPA 70E',
        description: 'Seguridad eléctrica en lugares de trabajo industriales',
    },
];

const resultados = [
    {
        icon: 'fas fa-shield-alt',
        title: 'Sistemas Seguros',
        description: 'Sistemas eléctricos seguros, eficientes y monitoreables',
    },
    {
        icon: 'fas fa-chart-line',
        title: 'Optimización Energética',
        description:
            'Optimización de la distribución de energía y reducción de pérdidas',
    },
    {
        icon: 'fas fa-clock',
        title: 'Continuidad Operativa',
        description:
            'Aumento de la continuidad operativa en procesos industriales',
    },
    {
        icon: 'fas fa-award',
        title: 'Instalación Certificada',
        description:
            'Cada instalación se entrega calibrada, documentada y certificada',
    },
];
---

<BaseLayout title={title} description={description}>
    <HeaderApple />

    <main class="main">
        <ServiceHero
            title="Control de potencia en plantas industriales y sistemas eléctricos inteligentes"
        />

        <IntroSection
            content="<strong>SMIIR diseña e implementa sistemas de control de potencia</strong> orientados a la gestión eficiente de la energía eléctrica en entornos industriales y comerciales de alta demanda. Los proyectos se desarrollan con base en normas NOM-001-SEDE, IEEE, IEC y NFPA 70E, asegurando confiabilidad, seguridad y desempeño continuo."
        />

        <ServicesGrid
            title="Diseño y Dimensionamiento"
            services={disenoDimensionamiento}
        />

        <BenefitsSection
            title="Automatización y Gestión de Potencia"
            benefits={automatizacionGestion}
            variant="highlighted"
        />

        <ServicesGrid
            title="Sistemas Eléctricos Inteligentes"
            services={sistemasInteligentes}
        />

        <BenefitsSection
            title="Cumplimiento Normativo"
            benefits={normativas}
            variant="default"
        />

        <BenefitsSection
            title="Resultados Garantizados"
            benefits={resultados}
            variant="highlighted"
        />
    </main>

    <Footer />
    <FloatingButtons />
</BaseLayout>

<style>
    .main {
        margin-top: 0;
    }

    /* FORZAR que TODOS los títulos sean idénticos */
    .hero h1,
    .services-grid h2,
    .benefits-section h2 {
        text-align: center !important;
        font-size: 2.5rem !important;
        font-weight: 800 !important;
        margin: 0 !important;
        color: white !important;
        background: none !important;
        -webkit-background-clip: unset !important;
        -webkit-text-fill-color: white !important;
    }
</style>
