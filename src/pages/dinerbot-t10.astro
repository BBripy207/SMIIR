---
import { Image } from 'astro:assets';
import { ViewTransitions } from 'astro:transitions';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import VideoPerfecto from '../components/VideoPerfecto.astro';

// Metadatos SEO
const title = 'DINERBOT T10 - SIMIR';
const description =
    'Presentación del robot DINERBOT T10 - Tecnología avanzada de servicio autónomo';
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="robots" content="index, follow" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://smiir.com.mx/dinerbot-t10" />

        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <link rel="stylesheet" href="/styles/base.css" />
        <link rel="stylesheet" href="/styles/layout.css" />
        <link rel="stylesheet" href="/styles/typography.css" />
        <link rel="stylesheet" href="/styles/components.css" />
        <link rel="stylesheet" href="/styles/responsive.css" />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&display=swap"
            rel="stylesheet"
        />

        <style>
            /* CSS moderno para iframes */
            .video-container iframe {
                border: none;
                border-radius: 12px;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
                transition:
                    transform 0.3s ease,
                    box-shadow 0.3s ease;
            }

            .video-container iframe:hover {
                box-shadow: 0 12px 48px rgba(0, 0, 0, 0.15);
            }
        </style>

        <!-- View Transitions para navegación fluida -->
        <ViewTransitions />
    </head>

    <body>
        <HeaderApple />

        <div class="presentation-container">
            <div class="content">
                <h1 class="main-title">
                    DINERBOT <span class="highlight">T10</span>
                </h1>
                <div class="image-container">
                    <Image
                        src="/assets/images/1.png"
                        alt="DINERBOT T10 Introducción"
                        class="presentation-image"
                        width={800}
                        height={600}
                        loading="lazy"
                    />
                </div>
                <VideoPerfecto
                    title="Interactivo y atractivo, haciendo cada momento divertido"
                    description="Los movimientos de la cabeza son adaptativos y responden a acciones como movimiento, tacto y entrega, proporcionando feedback dinámico."
                    videoId="ZoWQ_Dj97HI"
                />
                <VideoPerfecto
                    title="Interacción mejorada"
                    description="Cabeza móvil, pantalla de 23,8 pulgadas y botones interactivos redefinen la funcionalidad."
                    videoId="1hho2BwvPBM"
                />

                <VideoPerfecto
                    title="Auto servicio sin esfuerzo,diseñado con esmero"
                    titleClass="service-title"
                    description="a. Control táctil<br />b. Detección de bandejas con IA"
                    videoId="FUW1yCr49ss"
                />

                <VideoPerfecto
                    title="Salvaguardando cada paso"
                    titleClass="safeguard-title"
                    description="Reconocimiento 360°, equipado con cuatro sensores de visión Stereo + VSLAM + 1 cámara RGB para una visión Ultralarga y más clara"
                    videoId="dQ0lTmMw4iA"
                />

                <VideoPerfecto
                    title="Despreocúpate, disfruta de la sencillez"
                    titleClass="simplicity-title"
                    descriptionClass="detection-description"
                    description="Detección de bandeja 300°, gracias a la detección visual avanzada de platos, con bandejas iluminadas avanzados, con guía en Pantalla y voz"
                    videoId="-m1Br0bGXM0"
                />
                <h2 class="styles-title">Estilos versátiles, a tu gusto</h2>
                <p class="customization-description">
                    Elige entre varias opciones: accesorios para la cabeza,
                    expresiones, voz, Skins y una <span class="highlight-text"
                        >Pantalla grande</span
                    >
                </p>
                <div class="image-container">
                    <Image
                        src="/assets/images/2.png"
                        alt="DINERBOT T10 Estilos y Accesorios"
                        class="presentation-image"
                        width={800}
                        height={600}
                        loading="lazy"
                    />
                </div>
                <VideoPerfecto
                    title="Navegación y posicionamiento precisos"
                    titleClass="navigation-title"
                    descriptionClass="mapping-description"
                    description="Elaboración de mapas de posicionamiento precisos, con recolección de datos especiales, sin interrupciones para máxima fiabilidad"
                    videoId="U2mV5ni_K9c"
                />

                <VideoPerfecto
                    title="Algoritmos, patentados y distribución multi-robot"
                    titleClass="algorithms-title"
                    descriptionClass="algorithms-description"
                    description="Los algoritmos de IA patentados permiten a los robots optimizar la planificación de rutas para una ejecución eficiente de <span class='highlight-text'>tareas</span>"
                    videoId="MqtkzA1MbYc"
                />
                <div class="image-container">
                    <Image
                        src="/assets/images/5.png"
                        alt="DINERBOT T10 Final"
                        class="presentation-image"
                        width={800}
                        height={600}
                        loading="lazy"
                    />
                </div>
                <div class="image-container">
                    <Image
                        src="/assets/images/6.png"
                        alt="DINERBOT T10 Conclusión"
                        class="presentation-image"
                        width={800}
                        height={600}
                        loading="lazy"
                    />
                </div>
            </div>
        </div>

        <Footer />

        <!-- Scripts modulares -->
        <script src="/components/SlideshowManager.js" is:inline></script>
        <script src="/components/NavigationManager.js" is:inline></script>
        <script src="/components/AnimationManager.js" is:inline></script>
        <script src="/components/app.js" is:inline></script>

        <FloatingButtons />
    </body>
</html>
