---
import { Image } from 'astro:assets';
import { ViewTransitions } from 'astro:transitions';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import VideoPerfecto from '../components/VideoPerfecto.astro';
import ImageContainer from '../components/ImageContainer.astro';
import MainTitle from '../components/MainTitle.astro';
import PageLayout from '../components/PageLayout.astro';

// Metadatos SEO
const title = 'DINERBOT T3 - SIMIR';
const description =
    'Presentación del robot DINERBOT T3 - Robot de servicio de generación anterior con tecnología confiable';
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="robots" content="index, follow" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://smiir.com.mx/dinerbot-t3" />

        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <link rel="stylesheet" href="/styles/base.css" />
        <link rel="stylesheet" href="/styles/layout.css" />
        <link rel="stylesheet" href="/styles/typography.css" />
        <link rel="stylesheet" href="/styles/components.css" />
        <link rel="stylesheet" href="/styles/responsive.css" />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&display=swap"
            rel="stylesheet"
        />

        <style>
            /* CSS moderno para iframes */
            .video-container iframe {
                border: none;
                border-radius: 12px;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
                transition:
                    transform 0.3s ease,
                    box-shadow 0.3s ease;
            }

            .video-container iframe:hover {
                box-shadow: 0 12px 48px rgba(0, 0, 0, 0.15);
            }
        </style>

        <!-- View Transitions para navegación fluida -->
        <ViewTransitions />
    </head>

    <body>
        <HeaderApple />

        <PageLayout>
            <div class="content-text">
                <MainTitle robotName="DINERBOT" version="T3" />

                <ImageContainer
                    src="/assets/images/DINERBOT-T3/DINERBOT-T3-01.png"
                    alt="DINERBOT T3"
                />
                <VideoPerfecto
                    title="Seguro. Higiénico."
                    titleClass="interaction-title-purple"
                    description="Las puertas automáticas activadas por pasos y protegidas con contraseña garantizan un servicio de platos higiénico y a prueba de derrames."
                    videoId="gr74EaVcCD0"
                />
                <VideoPerfecto
                    title="Eficiencia maximizada."
                    titleClass="interaction-title-purple"
                    description="Descubra una eficiencia de entrega optimizada con un espacioso volumen de cabina de 180 litros."
                    videoId="qxxltzR4v98"
                />
                <VideoPerfecto
                    title="Soluciones de mensajería a medida"
                    titleClass="interaction-title-purple"
                    description="Flexible para diversas necesidades. Las capas ajustables permiten acomodar artículos de diferentes alturas (23 cm, 38 cm, 69 cm)."
                    videoId="1gYEjW-l4l4"
                />
                <VideoPerfecto
                    title="TECNOLOGÍA PRINCIPAL DE KEENON - Navegación y posicionamiento precisos"
                    titleClass="interaction-title-purple"
                    description="Cree mapas de posicionamiento precisos con una recopilación perfecta de datos espaciales para lograr una confiabilidad total."
                    videoId="Mf_4pPHjuHY"
                />
                <VideoPerfecto
                    title="Sinergizando la percepción 3D con la respuesta instantánea"
                    titleClass="interaction-title-purple"
                    description="Percepción ambiental precisa para una rápida evasión."
                    videoId="Ccr4ZyCNZdA"
                />
            </div>
        </PageLayout>

        <Footer />

        <!-- Scripts modulares -->
        <script src="/components/SlideshowManager.js" is:inline></script>
        <script src="/components/NavigationManager.js" is:inline></script>
        <script src="/components/AnimationManager.js" is:inline></script>
        <script src="/components/app.js" is:inline></script>

        <FloatingButtons />
    </body>
</html>