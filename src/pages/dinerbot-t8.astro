---
import { Image } from 'astro:assets';
import { ViewTransitions } from 'astro:transitions';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import VideoPerfecto from '../components/VideoPerfecto.astro';
import ImageContainer from '../components/ImageContainer.astro';
import MainTitle from '../components/MainTitle.astro';
import PageLayout from '../components/PageLayout.astro';

// Metadatos SEO
const title = 'DINERBOT T8 - SIMIR';
const description =
    'Presentación del robot DINERBOT T8 - Robot de servicio compacto y eficiente, ideal para espacios reducidos';
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="robots" content="index, follow" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://smiir.com.mx/dinerbot-t8" />

        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <link rel="stylesheet" href="/styles/base.css" />
        <link rel="stylesheet" href="/styles/layout.css" />
        <link rel="stylesheet" href="/styles/typography.css" />
        <link rel="stylesheet" href="/styles/components.css" />
        <link rel="stylesheet" href="/styles/responsive.css" />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&display=swap"
            rel="stylesheet"
        />

        <style>
            /* CSS moderno para iframes */
            .video-container iframe {
                border: none;
                border-radius: 12px;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
                transition:
                    transform 0.3s ease,
                    box-shadow 0.3s ease;
            }

            .video-container iframe:hover {
                box-shadow: 0 12px 48px rgba(0, 0, 0, 0.15);
            }
        </style>

        <!-- View Transitions para navegación fluida -->
        <ViewTransitions />
    </head>

    <body>
        <HeaderApple />

        <PageLayout>
            <div class="content-text">
                <MainTitle robotName="DINERBOT" version="T8" />

                <ImageContainer
                    src="/assets/images/DINERBOT-T08/DINERBOT-T8-01.png"
                    alt="DINERBOT T8"
                />
                <VideoPerfecto
                    title="Compacto, para una mayor agilidad"
                    titleClass="interaction-title-purple"
                    description="Nuestro robot compacto navega por espacios tan estrechos como 55 cm, lo que garantiza la maniobrabilidad en entornos acogedores."
                    videoId="LrujHE3TnzU"
                />
                <VideoPerfecto
                    title="Orientación inteligente para la recogida personal"
                    titleClass="interaction-title-purple"
                    description="Posible gracias a los sensores de la bandeja, una bandeja abierta a 300° y la guía de voz y visual en la pantalla táctil de 10,1 pulgadas."
                    videoId="79k9M4swBpI"
                />
                <VideoPerfecto
                    title="Seguridad elevada"
                    titleClass="interaction-title-purple"
                    description="DINERBOT T8 utiliza 3 sensores de visión estéreo, que detectan obstáculos altos comunes y aquellos de menos de 5 cm, para un servicio preciso y seguro en cualquier entorno."
                    imageUrl="/assets/images/DINERBOT-T08/DINERBOT-T8-02.png"
                    imageAlt="DINERBOT T8 Seguridad"
                />
            </div>
        </PageLayout>

        <Footer />

        <!-- Scripts modulares -->
        <script src="/components/SlideshowManager.js" is:inline></script>
        <script src="/components/NavigationManager.js" is:inline></script>
        <script src="/components/AnimationManager.js" is:inline></script>
        <script src="/components/app.js" is:inline></script>

        <FloatingButtons />
    </body>
</html>
