---
import { Image } from 'astro:assets';
import { ViewTransitions } from 'astro:transitions';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import VideoPerfecto from '../components/VideoPerfecto.astro';
import ImageContainer from '../components/ImageContainer.astro';
import MainTitle from '../components/MainTitle.astro';
import PageLayout from '../components/PageLayout.astro';

// Metadatos SEO
const title = 'DINERBOT T9 - SIMIR';
const description =
    'Presentación del robot DINERBOT T9 - Versión anterior del sistema de servicio autónomo';
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <meta name="robots" content="index, follow" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://smiir.com.mx/butlerbot" />

        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <link rel="stylesheet" href="/styles/base.css" />
        <link rel="stylesheet" href="/styles/layout.css" />
        <link rel="stylesheet" href="/styles/typography.css" />
        <link rel="stylesheet" href="/styles/components.css" />
        <link rel="stylesheet" href="/styles/responsive.css" />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&display=swap"
            rel="stylesheet"
        />

        <style>
            /* CSS moderno para iframes */
            .video-container iframe {
                border: none;
                border-radius: 12px;
                box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
                transition:
                    transform 0.3s ease,
                    box-shadow 0.3s ease;
            }

            .video-container iframe:hover {
                box-shadow: 0 12px 48px rgba(0, 0, 0, 0.15);
            }
        </style>

        <!-- View Transitions para navegación fluida -->
        <ViewTransitions />
    </head>

    <body>
        <HeaderApple />

        <PageLayout>
            <div class="content-text">
                <MainTitle robotName="DINERBOT" version="T9" />

                <ImageContainer
                    src="/assets/images/DINERBOT-09/DINERBOT-9-01.png"
                    alt="DINERBOT T9"
                />
                <VideoPerfecto
                    title="Bandejas Ajustables"
                    titleClass="interaction-title-purple"
                    description="Las bandejas permiten alturas de espacio ajustable de 19.5cm, 16.9cm, 25.3, 22.8cm"
                    videoId="ciwFLddOVpQ"
                />
                <VideoPerfecto
                    title="Capacidad de carga de 40 kg"
                    titleClass="interaction-title-purple"
                    description="Total de 40kg 10kg por bandeja, para un servicio de alimentos y bebidas eficiente"
                    videoId="BvRuDT_OPfE"
                />
                <VideoPerfecto
                    title="Carga Automática"
                    titleClass="interaction-title-purple"
                    description="Mayor duración de la batería, con una sola carga puede durar hasta 18 horas"
                    videoId="0f3-hkMvBtY"
                />
                <VideoPerfecto
                    title="Gran pantalla Táctil, Altura Perfecta"
                    titleClass="interaction-title-purple"
                    description="Optimiza las operaciones diarias con una gran pantalla táctil y una altura ideal"
                    videoId="_ahsD2_9ves"
                />
                <VideoPerfecto
                    title="Navegación y posicionamiento precisos"
                    titleClass="interaction-title-purple"
                    description="Elaboración de mapas de posicionamiento precisos con recolección de datos espaciales sin interrupciones para máxima fiabilidad"
                    videoId="_iX0L_B2m24"
                />
                <VideoPerfecto
                    title="Sinergia de percepción 3D con respuesta instantánea"
                    titleClass="interaction-title-purple"
                    description="Percepción ambiental precisa para una rápida evasión"
                    videoId="x-XpJ0r-zlg"
                />
                <VideoPerfecto
                    title="Algoritmos patentados y distribución multi-robot"
                    titleClass="interaction-title-purple"
                    description="Los algoritmos de IA patentados permiten a los robots optimizar la planificación de rutas para una ejecución eficiente de tareas"
                    videoId="-6H7yR8JRBU"
                />
                <VideoPerfecto
                    title="Demostración DINERBOT T9"
                    titleClass="interaction-title-purple"
                    description="Muestra final del DINERBOT T9 en acción"
                    videoId="aAEy5jRnpbw"
                />
                <div class="image-gallery">
                    <div class="image-container-dual">
                        <ImageContainer
                            src="/assets/images/DINERBOT-09/DINERBOT-9-02.png"
                            alt="DINERBOT T9"
                            width={500}
                            height={400}
                        />
                        <ImageContainer
                            src="/assets/images/DINERBOT-09/DINERBOT-9-03.png"
                            alt="DINERBOT T9"
                            width={500}
                            height={400}
                        />
                    </div>
                </div>
            </div>
        </PageLayout>

        <Footer />

        <!-- Scripts modulares -->
        <script src="/components/SlideshowManager.js" is:inline></script>
        <script src="/components/NavigationManager.js" is:inline></script>
        <script src="/components/AnimationManager.js" is:inline></script>
        <script src="/components/app.js" is:inline></script>

        <FloatingButtons />
    </body>
</html>
