---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import ServiceHero from '../components/ServiceHero.astro';
import IntroSection from '../components/IntroSection.astro';
import BenefitsSection from '../components/BenefitsSection.astro';
import ServicesGrid from '../components/ServicesGrid.astro';

const title =
    'Implementación de sistemas SCADA para supervisión en tiempo real | SMIIR';
const description =
    'SMIIR diseña e implementa sistemas SCADA (Supervisory Control And Data Acquisition) que permiten el monitoreo, control y registro de procesos industriales en tiempo real. Estas soluciones integran hardware, software y comunicación industrial para garantizar operación continua, trazabilidad de datos y respuesta inmediata ante cualquier evento.';

const disenoIntegracion = [
    {
        icon: 'fas fa-sitemap',
        title: 'Arquitecturas Personalizadas',
        description:
            'Desarrollo de arquitecturas SCADA personalizadas según la escala y complejidad del proceso',
    },
    {
        icon: 'fas fa-network-wired',
        title: 'Integración con PLC',
        description:
            'Integración con PLC Siemens, Allen-Bradley o Schneider Electric, garantizando comunicación estable mediante protocolos industriales (Modbus TCP, EtherNet/IP, Profinet, OPC UA)',
    },
    {
        icon: 'fas fa-desktop',
        title: 'Configuración HMI',
        description:
            'Configuración de HMI (Human Machine Interface) con pantallas gráficas intuitivas, alarmas, tendencias y control de variables',
    },
    {
        icon: 'fas fa-database',
        title: 'Bases de Datos',
        description:
            'Implementación de bases de datos SQL o Historian para almacenamiento de registros históricos',
    },
];

const supervisionControl = [
    {
        icon: 'fas fa-tachometer-alt',
        title: 'Monitoreo de Variables',
        description:
            'Monitoreo de variables críticas: presión, caudal, temperatura, nivel, potencia, consumo energético y estado de equipos',
    },
    {
        icon: 'fas fa-cogs',
        title: 'Control Remoto',
        description:
            'Control remoto de bombas, válvulas, motores y sistemas eléctricos desde estaciones locales o plataformas web seguras',
    },
    {
        icon: 'fas fa-bell',
        title: 'Alarmas Configurables',
        description:
            'Configuración de alarmas visuales y auditivas para fallas, sobrecargas o condiciones fuera de rango',
    },
    {
        icon: 'fas fa-file-alt',
        title: 'Reportes Automáticos',
        description:
            'Generación automática de reportes de desempeño, históricos de operación y trazabilidad de mantenimiento',
    },
];

const seguridadConectividad = [
    {
        icon: 'fas fa-shield-alt',
        title: 'Redes Seguras',
        description:
            'Implementación de redes industriales seguras con firewalls, VLAN y redundancia de comunicación',
    },
    {
        icon: 'fas fa-cloud',
        title: 'Integración IoT',
        description:
            'Integración con sistemas IoT para monitoreo remoto desde dispositivos móviles o paneles en la nube',
    },
    {
        icon: 'fas fa-users-cog',
        title: 'Control de Accesos',
        description:
            'Control de accesos y permisos por usuario para mantener la integridad del sistema',
    },
    {
        icon: 'fas fa-certificate',
        title: 'Ciberseguridad Industrial',
        description:
            'Cumplimiento con estándares ISA-99 / IEC 62443 de ciberseguridad industrial',
    },
];

const aplicaciones = [
    {
        icon: 'fas fa-flask',
        title: 'Procesos Industriales',
        description:
            'Plantas de tratamiento de agua, procesos químicos y líneas de producción automatizadas',
    },
    {
        icon: 'fas fa-bolt',
        title: 'Sistemas Eléctricos',
        description:
            'Sistemas eléctricos industriales, HVAC, iluminación y control energético',
    },
    {
        icon: 'fas fa-solar-panel',
        title: 'Supervisión Energética',
        description:
            'Supervisión de parques fotovoltaicos, estaciones de bombeo y centros de distribución',
    },
];

const garantias = [
    {
        icon: 'fas fa-cogs',
        title: 'Sistemas Funcionales',
        description:
            'Sistemas SCADA totalmente funcionales, documentados y escalables',
    },
    {
        icon: 'fas fa-eye',
        title: 'Control Total',
        description: 'Control total sobre las operaciones industriales',
    },
    {
        icon: 'fas fa-chart-line',
        title: 'Optimización Productiva',
        description:
            'Reducción de fallas y optimización de la eficiencia productiva',
    },
];
---

<BaseLayout title={title} description={description}>
    <HeaderApple />

    <main class="main">
        <ServiceHero
            title="Implementación de sistemas SCADA para supervisión en tiempo real"
        />

        <IntroSection
            content="<strong>SMIIR diseña e implementa sistemas SCADA</strong> (Supervisory Control And Data Acquisition) que permiten el monitoreo, control y registro de procesos industriales en tiempo real. Estas soluciones integran hardware, software y comunicación industrial para garantizar operación continua, trazabilidad de datos y respuesta inmediata ante cualquier evento."
        />

        <ServicesGrid
            title="Diseño e Integración"
            services={disenoIntegracion}
        />

        <BenefitsSection
            title="Supervisión y Control"
            benefits={supervisionControl}
            variant="highlighted"
        />

        <ServicesGrid
            title="Seguridad y Conectividad"
            services={seguridadConectividad}
        />

        <BenefitsSection
            title="Aplicaciones"
            benefits={aplicaciones}
            variant="default"
        />

        <BenefitsSection
            title="Garantías SMIIR"
            benefits={garantias}
            variant="highlighted"
        />
    </main>

    <Footer />
    <FloatingButtons />
</BaseLayout>

<style>
    .main {
        margin-top: 0;
    }

    /* FORZAR que TODOS los títulos sean idénticos */
    .hero h1,
    .services-grid h2,
    .benefits-section h2 {
        text-align: center !important;
        font-size: 2.5rem !important;
        font-weight: 800 !important;
        margin: 0 !important;
        color: white !important;
        background: none !important;
        -webkit-background-clip: unset !important;
        -webkit-text-fill-color: white !important;
    }
</style>
