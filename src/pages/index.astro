---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';

// Metadatos SEO
const title = 'SIMIR - Sistemas de Robótica';
const description =
    'Soluciones avanzadas de robótica para servicio autónomo - DINERBOT T9 y T10';
---

<BaseLayout title={title} description={description}>
    <style>
        /* Hero section con imagen de fondo */
        .hero-section {
            position: relative;
            width: 100%;
            min-height: 100vh;
            background-image: url('/assets/images/portadas/novedades.png');
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            flex-direction: column;
        }

        /* Asegurar que el header esté por encima */
        .hero-section :global(header) {
            position: relative;
            z-index: 2;
        }

        /* Header con fondo blanco igual a la imagen - SOLO EN INDEX */
        :global(header) {
            background: #f2f3f4 !important;
        }

        /* Sección de Novedades */
        .novedades-section {
            padding: 2rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        .novedades-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .novedades-subtitle {
            font-size: 1.2rem;
            color: #b3b3b3;
            margin-bottom: 2rem;
            font-weight: 400;
        }

        .dinerbots-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
            margin-top: 1rem;
        }

        .dinerbot-card {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.4s ease;
            cursor: pointer;
            text-decoration: none;
        }

        .dinerbot-card:hover {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .dinerbot-image {
            width: 100%;
            height: 350px;
            object-fit: cover;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

        .dinerbot-card:hover .dinerbot-image {
            opacity: 0.9;
        }

        /* CSS específico para DINERBOT T11 en novedades - enfoque más arriba */
        .dinerbot-image[alt*='T11'] {
            object-position: center 11%;
        }

        .product-title {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
            color: white;
            padding: 2rem 1.5rem 1.5rem;
            font-size: 1.3rem;
            font-weight: 700;
            text-align: center;
        }

        @media (max-width: 768px) {
            /* Hero pegado al header en móvil - altura ajustada */
            .hero-section {
                height: 0vh;
                min-height: 0vh;
                margin-top: 0;
                padding-top: 0;
            }

            .novedades-section {
                padding: 1.5rem 1rem;
            }

            .novedades-title {
                font-size: 2rem;
            }

            .dinerbots-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .dinerbot-image {
                height: 280px;
            }
        }
    </style>

    <HeaderApple />

    <!-- Hero section con imagen de fondo -->
    <div class="hero-section"></div>

    <section class="novedades-section">
        <h2 class="novedades-title">Novedades</h2>
        <p class="novedades-subtitle">
            Capacidad e innovación que construyen el futuro.
        </p>
        <div class="dinerbots-grid">
            <!-- DINERBOT T10 -->
            <a href="/dinerbot-t10" class="dinerbot-card">
                <img
                    src="/assets/images/portadas/dinerbott10.png"
                    alt="DINERBOT T10"
                    class="dinerbot-image"
                />
                <div class="product-title">DINERBOT T10</div>
            </a>

            <!-- DINERBOT T9 -->
            <a href="/butlerbot" class="dinerbot-card">
                <img
                    src="/assets/images/portadas/DINERBOT T9.png"
                    alt="DINERBOT T9"
                    class="dinerbot-image"
                />
                <div class="product-title">DINERBOT T9</div>
            </a>

            <!-- DINERBOT T8 -->
            <a href="/dinerbot-t8" class="dinerbot-card">
                <img
                    src="/assets/images/portadas/DINERBOT T8.png"
                    alt="DINERBOT T8"
                    class="dinerbot-image"
                />
                <div class="product-title">DINERBOT T8</div>
            </a>

            <!-- DINERBOT T3 -->
            <a href="/dinerbot-t3" class="dinerbot-card">
                <img
                    src="/assets/images/portadas/DINERBOT T3.png"
                    alt="DINERBOT T3"
                    class="dinerbot-image"
                />
                <div class="product-title">DINERBOT T3</div>
            </a>

            <!-- DINERBOT T11 -->
            <a href="/dinerbot-t11" class="dinerbot-card">
                <img
                    src="/assets/images/portadas/DINERBOT T11.png"
                    alt="DINERBOT T11"
                    class="dinerbot-image"
                />
                <div class="product-title">DINERBOT T11</div>
            </a>

            <!-- MAYORDOMO W3 -->
            <a href="/mayordomo-w3" class="dinerbot-card">
                <img
                    src="/assets/images/portadas/MAYORDOMO W3.png"
                    alt="MAYORDOMO W3"
                    class="dinerbot-image"
                />
                <div class="product-title">MAYORDOMO W3</div>
            </a>
        </div>
    </section>

    <Footer />
    <FloatingButtons />
</BaseLayout>
