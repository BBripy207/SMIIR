---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';

// Metadatos SEO
const title = 'SIMIR - Sistemas de Robótica';
const description =
    'Soluciones avanzadas de robótica para servicio autónomo - DINERBOT T9 y T10';
---

<BaseLayout title={title} description={description}>
    <style>
        /* Sección de Novedades - pegada al header */
        .novedades-section {
            padding: 0 2rem 2rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        /* Imagen de novedades debajo del título */
        .novedades-image {
            max-width: 100%;
            height: auto;
            margin: 2rem 0;
            border-radius: 15px;
        }

        .novedades-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .novedades-subtitle {
            font-size: 1.2rem;
            color: #b3b3b3;
            margin-bottom: 2rem;
            font-weight: 400;
        }

        .dinerbots-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
            margin-top: 1rem;
        }

        .dinerbot-card {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.4s ease;
            cursor: pointer;
            text-decoration: none;
        }

        .dinerbot-card:hover {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .dinerbot-image {
            width: 100%;
            height: 350px;
            object-fit: cover;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

        .dinerbot-card:hover .dinerbot-image {
            opacity: 0.9;
        }

        /* CSS específico para DINERBOT T11 en novedades - enfoque más arriba */
        .dinerbot-image[alt*='T11'] {
            object-position: center 11%;
        }

        .product-title {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
            color: white;
            padding: 2rem 1.5rem 1.5rem;
            font-size: 1.3rem;
            font-weight: 700;
            text-align: center;
        }

        @media (max-width: 768px) {
            .novedades-section {
                padding: 0 1rem 1.5rem 1rem;
            }

            .novedades-title {
                font-size: 2.8rem;
            }

            .dinerbots-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
        }
    </style>

    <HeaderApple />

    <section class="novedades-section">
        <h2 class="novedades-title">¡Descubre Nuestras Novedades!</h2>
        <img
            src="/assets/images/portadas/novedades.png"
            alt="¡Descubre Nuestras Novedades! SIMIR"
            class="novedades-image"
        />
        <p
            class="novedades-subtitle"
            style="font-size: 1.8rem; font-weight: 600; color: white;"
        >
            ¡Capacidad e innovación que construyen el futuro!
        </p>

        <h3
            style="font-size: 2.5rem; font-weight: 700; margin: 0 0 1.5rem 0; text-align: center; color: white;"
        >
            DESTACADOS
        </h3>

        <div class="dinerbots-grid">
            <!-- DINERBOT T11 -->
            <a href="/dinerbot-t11" class="dinerbot-card">
                <img
                    src="/assets/images/portadas/DINERBOT T11.png"
                    alt="DINERBOT T11"
                    class="dinerbot-image"
                />
                <div class="product-title">DINERBOT T11</div>
            </a>

            <!-- MAYORDOMO W3 -->
            <a href="/mayordomo-w3" class="dinerbot-card">
                <img
                    src="/assets/images/portadas/MAYORDOMO W3.png"
                    alt="MAYORDOMO W3"
                    class="dinerbot-image"
                />
                <div class="product-title">MAYORDOMO W3</div>
            </a>

            <!-- KENON-S300 -->
            <a href="/kenon-s300" class="dinerbot-card">
                <img
                    src="/assets/images/portadas/KENON-S300.png"
                    alt="KENON-S300"
                    class="dinerbot-image"
                />
                <div class="product-title">KENON-S300</div>
            </a>
        </div>
    </section>

    <Footer />
    <FloatingButtons />
</BaseLayout>
