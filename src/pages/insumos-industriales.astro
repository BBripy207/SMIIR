---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';

const title = 'Insumos Industriales | SMIIR';
const description =
    'SMIIR ofrece una amplia gama de insumos industriales, equipos importados y soluciones técnicas especializadas para la industria.';

// Datos de insumos industriales
const services = [
    {
        icon: 'fas fa-globe',
        title: 'Equipos Importados',
        items: [
            {
                icon: 'fas fa-cogs',
                title: 'Equipos especializados de importación directa',
                link: 'https://biblioteca.smiir.com',
            },
        ],
    },
    {
        icon: 'fas fa-tools',
        title: 'Insumos Técnicos',
        items: [
            {
                icon: 'fas fa-wrench',
                title: 'Insumos técnicos especializados para la industria',
                link: 'https://biblioteca.smiir.com',
            },
        ],
    },
    {
        icon: 'fas fa-industry',
        title: 'Mecanización y Surtido',
        items: [
            {
                icon: 'fas fa-laptop',
                title: 'Mecanización e surtido de Polietileno HDPE y equipo de cómputo CT International',
                link: 'https://biblioteca.smiir.com',
            },
        ],
    },
];
---

<BaseLayout {title} {description}>
    <HeaderApple />

    <main class="main">
        <div class="hero">
            <h1>INSUMOS INDUSTRIALES</h1>
            <p>
                Suministramos equipos especializados, insumos técnicos y
                soluciones de mecanización para la industria moderna
            </p>
        </div>

        <div class="services">
            {
                services.map((service, index) => (
                    <div class="category">
                        <button
                            class="header"
                            onclick={`toggle(${index})`}
                            type="button"
                        >
                            <i class={service.icon} />
                            <h2>{service.title}</h2>
                            <i class="fas fa-chevron-down arrow" />
                        </button>
                        <div class="content" id={`content-${index}`}>
                            {service.items.map(item => (
                                <div class="item">
                                    <i class={item.icon} />
                                    {item.link ? (
                                        <a
                                            href={item.link}
                                            class="item-link"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                        >
                                            <h3>{item.title}</h3>
                                        </a>
                                    ) : (
                                        <h3>{item.title}</h3>
                                    )}
                                </div>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </main>

    <Footer />
    <FloatingButtons />
</BaseLayout>
<style>
    .main {
        margin-top: 0;
    }
    .hero {
        text-align: center;
        padding: 1rem 2rem;
        max-width: 1200px;
        margin: 0 auto 1rem;
    }
    .hero h1 {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 900;
        margin: 0 0 0.5rem;
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        line-height: 1.1;
    }
    .hero p {
        font-size: 1.2rem;
        margin: 0;
        color: #b3b3b3;
        max-width: 600px;
        margin: 0 auto;
    }
    .services {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .category {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
    }
    .category:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(59, 130, 246, 0.3);
    }
    .header {
        display: flex;
        align-items: center;
        padding: 1.5rem 2rem;
        width: 100%;
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        border-left: 4px solid #3b82f6;
        transition: background 0.1s;
    }
    .header:hover {
        background: rgba(255, 255, 255, 0.05);
    }
    .header i:first-child {
        font-size: 1.5rem;
        color: #3b82f6;
        margin-right: 1rem;
    }
    .header h2 {
        flex: 1;
        margin: 0;
        font-size: 1.3rem;
        font-weight: 700;
        text-align: left;
    }
    .arrow {
        font-size: 1rem;
        color: #3b82f6;
        transition: transform 0.1s ease-out;
    }
    .header.active .arrow {
        transform: rotate(180deg);
    }
    .content {
        max-height: 0;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.02);
        transition: max-height 0.15s ease-out;
    }
    .content.active {
        max-height: 800px;
    }
    .item {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        gap: 1rem;
    }
    .item:last-child {
        border-bottom: none;
    }
    .item i {
        font-size: 1.2rem;
        color: #3b82f6;
        margin-top: 0.2rem;
        min-width: 20px;
    }
    .item h3 {
        margin: 0 0 0.5rem;
        color: white;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .item-link {
        text-decoration: none;
        color: inherit;
        transition: color 0.3s ease;
    }

    .item-link:hover h3 {
        color: #3b82f6;
    }

    .item p {
        margin: 0;
        color: #b3b3b3;
        line-height: 1.5;
        font-size: 0.95rem;
    }
    @media (max-width: 768px) {
        .services {
            padding: 0 1rem 2rem;
        }
        .header {
            padding: 1rem 1.5rem;
        }
        .header h2 {
            font-size: 1.1rem;
        }
        .item {
            padding: 1rem 1.5rem;
            flex-direction: column;
            gap: 0.5rem;
        }
        .item i {
            margin-top: 0;
        }
        .hero {
            padding: 1rem;
        }
    }
    @media (max-width: 480px) {
        .hero h1 {
            font-size: 2rem;
        }
        .hero p {
            font-size: 1rem;
        }
        .header {
            padding: 0.8rem 1rem;
        }
        .header h2 {
            font-size: 1rem;
        }
        .item {
            padding: 0.8rem 1rem;
        }
    }
</style>

<script is:inline>
    function toggle(i) {
        const c = document.getElementById(`content-${i}`);
        const h = c.previousElementSibling;
        const isOpen = c.classList.contains('active');

        // Cerrar todos los menús primero
        document
            .querySelectorAll('.content.active')
            .forEach(el => el.classList.remove('active'));
        document
            .querySelectorAll('.header.active')
            .forEach(el => el.classList.remove('active'));

        // Si no estaba abierto, abrir solo este (sin delay)
        if (!isOpen) {
            c.classList.add('active');
            h.classList.add('active');
        }
    }
</script>
