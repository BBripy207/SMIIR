---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import ServicesHero from '../components/ServicesHero.astro';
import ExpandableServicesGrid from '../components/ExpandableServicesGrid.astro';

const title = 'Insumos Industriales | SMIIR';
const description =
    'SMIIR ofrece una amplia gama de insumos industriales, equipos importados y soluciones técnicas especializadas para la industria.';

// Datos de insumos industriales
const services = [
    {
        icon: 'fas fa-globe',
        title: 'Equipos Importados',
        items: [
            {
                icon: 'fas fa-cogs',
                title: 'Equipos especializados de importación directa',
                link: 'https://biblioteca.smiir.com',
            },
        ],
    },
    {
        icon: 'fas fa-tools',
        title: 'Insumos Técnicos',
        items: [
            {
                icon: 'fas fa-wrench',
                title: 'Insumos técnicos especializados para la industria',
                link: 'https://biblioteca.smiir.com',
            },
        ],
    },
    {
        icon: 'fas fa-industry',
        title: 'Mecanización e Surtido de Polietileno HDPE',
        items: [
            {
                icon: 'fas fa-cogs',
                title: 'Mecanización e surtido de Polietileno HDPE',
                link: 'https://biblioteca.smiir.com',
            },
        ],
    },
    {
        icon: 'fas fa-laptop',
        title: 'Equipo de Cómputo CT International',
        items: [
            {
                icon: 'fas fa-desktop',
                title: 'Equipos de cómputo CT International',
                link: 'https://ctonline.mx/',
            },
        ],
    },
];
---

<BaseLayout {title} {description}>
    <HeaderApple />

    <main class="main">
        <ServicesHero
            title="INSUMOS INDUSTRIALES"
            description="Suministramos equipos especializados, insumos técnicos y soluciones de mecanización para la industria moderna"
        />

        <ExpandableServicesGrid services={services} />
    </main>

    <Footer />
    <FloatingButtons />
</BaseLayout>

<style>
    .main {
        margin-top: 0;
    }
</style>
