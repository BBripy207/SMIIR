---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import ServiceHero from '../components/ServiceHero.astro';
import IntroSection from '../components/IntroSection.astro';
import ServicesGrid from '../components/ServicesGrid.astro';
import BenefitsSection from '../components/BenefitsSection.astro';

const title =
    'Naves Industriales y Plantas de Proceso | SMIIR - Construcción Industrial';
const description =
    'Diseño y construcción de naves industriales, plantas de proceso y obras comerciales. Infraestructura preparada para operar con eficiencia, seguridad y continuidad.';

const introContent = `
    Diseñamos y construimos infraestructura industrial y
    comercial preparada para operar con eficiencia, seguridad y
    continuidad. Cada proyecto se ejecuta con <strong>precisión estructural</strong>, 
    <strong>materiales certificados</strong> y una planeación
    orientada a la productividad del cliente.
`;

const services = [
    {
        icon: 'fas fa-drafting-compass',
        title: 'Diseño arquitectónico y estructural',
        description: 'Adaptado a la operación específica de cada cliente',
    },
    {
        icon: 'fas fa-industry',
        title: 'Montaje de estructuras metálicas',
        description: 'De alta resistencia y durabilidad industrial',
    },
    {
        icon: 'fas fa-layer-group',
        title: 'Pisos industriales nivelados',
        description: 'Acabados técnicos de alto desempeño',
    },
    {
        icon: 'fas fa-home',
        title: 'Cubiertas, muros y cerramientos',
        description: 'Con aislamiento térmico y acústico especializado',
    },
    {
        icon: 'fas fa-plug',
        title: 'Instalaciones eléctricas e hidráulicas',
        description: 'Listas para automatización y servicios industriales',
    },
    {
        icon: 'fas fa-wind',
        title: 'Sistemas de ventilación y climatización',
        description: 'Adecuados a cada tipo de proceso industrial',
    },
];

const benefits = [
    {
        icon: 'fas fa-check-circle',
        title: 'Operación continua',
        description: 'Diseño para funcionamiento ininterrumpido',
    },
    {
        icon: 'fas fa-tools',
        title: 'Mantenimiento mínimo',
        description: 'Materiales y sistemas de bajo mantenimiento',
    },
    {
        icon: 'fas fa-expand-arrows-alt',
        title: 'Expansión futura',
        description: 'Estructuras preparadas para crecimiento',
    },
];
---

<BaseLayout {title} {description}>
    <HeaderApple />

    <main class="main">
        <ServiceHero
            title="NAVES INDUSTRIALES, PLANTAS DE PROCESO Y OBRAS COMERCIALES"
        />

        <IntroSection content={introContent} />

        <ServicesGrid
            title="SMIIR desarrolla desde el concepto hasta la entrega final"
            services={services}
        />

        <BenefitsSection
            title="Garantías de Operación"
            benefits={benefits}
            variant="highlighted"
        />
    </main>

    <Footer />
    <FloatingButtons />
</BaseLayout>

<style>
    .main {
        margin-top: 0;
    }
</style>
