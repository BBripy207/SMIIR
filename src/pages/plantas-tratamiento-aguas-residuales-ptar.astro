---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import ServiceHero from '../components/ServiceHero.astro';
import IntroSection from '../components/IntroSection.astro';
import BenefitsSection from '../components/BenefitsSection.astro';
import ServicesGrid from '../components/ServicesGrid.astro';

const title = 'Plantas de Tratamiento de Aguas Residuales (PTAR) | SMIIR';
const description =
    'SMIIR diseña, construye y automatiza plantas de tratamiento de aguas residuales (PTAR) orientadas a la eficiencia operativa, sostenibilidad ambiental y cumplimiento normativo. Cada instalación se adapta al caudal, tipo de efluente y requerimientos específicos del proceso industrial o municipal.';

const disenoIngenieria = [
    {
        icon: 'fas fa-flask',
        title: 'Análisis Fisicoquímico',
        description:
            'Análisis fisicoquímico del agua residual para determinar el proceso adecuado: pretratamiento, tratamiento biológico, clarificación, filtrado y desinfección',
    },
    {
        icon: 'fas fa-calculator',
        title: 'Cálculo Hidráulico',
        description:
            'Cálculo hidráulico y diseño de unidades de operación: cárcamo de bombeo, sedimentadores, reactores biológicos, filtros y tanques de almacenamiento',
    },
    {
        icon: 'fas fa-cube',
        title: 'Modelado Hidráulico 3D',
        description:
            'Modelado hidráulico 3D y elaboración de diagramas P&ID e instrumentación de control',
    },
    {
        icon: 'fas fa-shield-alt',
        title: 'Materiales Resistentes',
        description:
            'Selección de materiales resistentes a la corrosión (HDPE, PVC, acero inoxidable, FRP)',
    },
];

const automatizacionControl = [
    {
        icon: 'fas fa-microchip',
        title: 'Control PLC',
        description:
            'Implementación de PLC Siemens o Allen-Bradley para el control automático de bombas, válvulas, sopladores y reactores',
    },
    {
        icon: 'fas fa-desktop',
        title: 'Sistemas SCADA',
        description:
            'Integración con sistemas SCADA para monitoreo en tiempo real de parámetros como nivel, caudal, pH, conductividad y oxígeno disuelto',
    },
    {
        icon: 'fas fa-chart-line',
        title: 'Registro Digital',
        description:
            'Registro digital de datos históricos, alarmas y reportes de operación',
    },
    {
        icon: 'fas fa-wifi',
        title: 'Monitoreo Remoto',
        description:
            'Compatibilidad con sistemas de monitoreo remoto vía IoT o paneles web',
    },
];

const instalacionConstruccion = [
    {
        icon: 'fas fa-tools',
        title: 'Montaje de Estructuras',
        description:
            'Montaje de estructuras, tanques, ductos y líneas hidráulicas con precisión nivelada y control de fugas',
    },
    {
        icon: 'fas fa-plug',
        title: 'Integración Eléctrica',
        description:
            'Integración eléctrica e instrumentación calibrada en campo',
    },
    {
        icon: 'fas fa-vials',
        title: 'Pruebas Hidrostáticas',
        description:
            'Pruebas hidrostáticas, arranque controlado y validación de eficiencia del proceso',
    },
    {
        icon: 'fas fa-graduation-cap',
        title: 'Capacitación y Entrega',
        description:
            'Capacitación operativa y entrega documentada con manuales técnicos y planos "as-built"',
    },
];

const aplicaciones = [
    {
        icon: 'fas fa-city',
        title: 'Tratamiento Municipal',
        description:
            'PTAR compactas o modulares para comunidades y zonas urbanas',
    },
    {
        icon: 'fas fa-industry',
        title: 'Tratamiento Industrial',
        description:
            'Aguas provenientes de procesos alimentarios, químicos, textiles o metalúrgicos',
    },
    {
        icon: 'fas fa-recycle',
        title: 'Recuperación y Reúso',
        description:
            'Sistemas terciarios para riego, enfriamiento o reinyección en proceso',
    },
];

const garantias = [
    {
        icon: 'fas fa-award',
        title: 'Plantas Robustas',
        description:
            'Plantas de tratamiento robustas, automatizadas y sustentables',
    },
    {
        icon: 'fas fa-certificate',
        title: 'Cumplimiento Normativo',
        description:
            'Diseñadas para cumplir con las normas NOM-001-SEMARNAT y NOM-002-SEMARNAT',
    },
    {
        icon: 'fas fa-leaf',
        title: 'Operación Confiable',
        description:
            'Asegurando descargas limpias y operación confiable a largo plazo',
    },
];
---

<BaseLayout title={title} description={description}>
    <HeaderApple />

    <main class="main">
        <ServiceHero
            title="Plantas de Tratamiento de Aguas Residuales (PTAR)"
        />

        <IntroSection
            content="<strong>SMIIR diseña, construye y automatiza plantas de tratamiento de aguas residuales (PTAR)</strong> orientadas a la eficiencia operativa, sostenibilidad ambiental y cumplimiento normativo. Cada instalación se adapta al caudal, tipo de efluente y requerimientos específicos del proceso industrial o municipal."
        />

        <ServicesGrid
            title="Diseño e Ingeniería de Proceso"
            services={disenoIngenieria}
        />

        <BenefitsSection
            title="Automatización y Control"
            benefits={automatizacionControl}
            variant="highlighted"
        />

        <ServicesGrid
            title="Instalación y Construcción"
            services={instalacionConstruccion}
        />

        <BenefitsSection
            title="Aplicaciones"
            benefits={aplicaciones}
            variant="default"
        />

        <BenefitsSection
            title="Garantías SMIIR"
            benefits={garantias}
            variant="highlighted"
        />
    </main>

    <Footer />
    <FloatingButtons />
</BaseLayout>

<style>
    .main {
        margin-top: 0;
    }

    /* FORZAR que TODOS los títulos sean idénticos */
    .hero h1,
    .services-grid h2,
    .benefits-section h2 {
        text-align: center !important;
        font-size: 2.5rem !important;
        font-weight: 800 !important;
        margin: 0 !important;
        color: white !important;
        background: none !important;
        -webkit-background-clip: unset !important;
        -webkit-text-fill-color: white !important;
    }
</style>
