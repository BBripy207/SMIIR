---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import ProductCard from '../components/ProductCard.astro';
import ProductsHero from '../components/ProductsHero.astro';

// Metadatos SEO mejorados
const title = 'Robots Meseros - Línea Completa de Robots de Servicio';
const description =
    'Descubre nuestra línea completa de robots de servicio autónomo: DINERBOT T10, T9, T8, T3, T11 y MAYORDOMO W3. Tecnología de vanguardia para revolucionar la industria de servicios con navegación inteligente, IA patentada y diseño innovador.';

// Datos de productos
const t10Features = [
    'Navegación y mapeo inteligente',
    'Algoritmos de IA patentados',
    'Interacción mejorada',
    'Estilos versátiles',
];

const t9Features = [
    'Capacidad de carga 40kg',
    'Sistema de navegación estable',
    'Interfaz intuitiva',
    'Diseño robusto',
];

const t8Features = [
    'Compacto, navega espacios de 55cm',
    'Sensores de visión estéreo 3D',
    'Tecnología CORE de KEENON',
    'Algoritmos IA patentados',
];

const t3Features = [
    'Puertas automáticas higiénicas',
    'Volumen de cabina 180 litros',
    'Capas ajustables (23, 38, 69 cm)',
    'Tecnología KEENON probada',
];

const t11Features = [
    'Diseño futurista de próxima generación',
    'Sistema de navegación ultra avanzado',
    'Interfaz táctil de última tecnología',
    'Capacidades de servicio premium',
];

const w3Features = [
    'Usuario del ascensor IoT',
    'Puertas automáticas higiénicas',
    '4 compartimentos independientes',
    'Servicio sin contacto y privado',
];
---

<BaseLayout title={title} description={description}>
    <style>
        .products-page {
            min-height: 100vh;
            padding: 0 20px 60px;
        }

        .products-container {
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 60px;
            margin-top: 1rem;
        }

        .product-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 40px;
            text-decoration: none;
            color: #f5f5f7;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }

        .product-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                135deg,
                rgba(30, 58, 138, 0.1) 0%,
                rgba(59, 130, 246, 0.1) 100%
            );
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .product-card:hover::before {
            opacity: 1;
        }

        .product-card:hover {
            border-color: rgba(30, 58, 138, 0.5);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .product-image {
            width: 200px;
            height: 200px;
            margin: 0 auto 30px;
            border-radius: 20px;
            overflow: hidden;
            position: relative;
            z-index: 1;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-name {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 1rem;
            position: relative;
            z-index: 1;
        }

        .product-description {
            font-size: 1rem;
            color: #a1a1aa;
            margin-bottom: 2rem;
            line-height: 1.6;
            position: relative;
            z-index: 1;
        }

        .product-features {
            list-style: none;
            text-align: left;
            margin-bottom: 2rem;
            position: relative;
            z-index: 1;
        }

        .product-features li {
            padding: 8px 0;
            padding-left: 20px;
            position: relative;
            color: #d1d1d6;
        }

        .product-features li::before {
            content: '✓';
            position: absolute;
            left: 0;
            color: #1e3a8a;
            font-weight: bold;
        }

        .cta-button {
            display: inline-block;
            padding: 12px 32px;
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
            color: white;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            z-index: 1;
        }

        .cta-button:hover {
            box-shadow: 0 8px 25px rgba(30, 58, 138, 0.4);
        }

        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: 1fr;
                gap: 40px;
            }

            .product-card {
                padding: 30px;
            }
        }
    </style>

    <HeaderApple />

    <main class="products-page">
        <ProductsHero />

        <div class="products-container">
            <div class="products-grid">
                <ProductCard
                    name="DINERBOT T10"
                    description="La última generación de robots de servicio con tecnología avanzada de IA y navegación autónoma"
                    features={t10Features}
                    imageUrl="/assets/images/portadas/dinerbott10.png"
                    imageAlt="DINERBOT T10"
                    linkUrl="/dinerbot-t10"
                />

                <ProductCard
                    name="DINERBOT T9"
                    description="Robot de servicio confiable con capacidad de carga de 40kg y funcionalidades probadas"
                    features={t9Features}
                    imageUrl="/assets/images/portadas/DINERBOT T9.png"
                    imageAlt="DINERBOT T9"
                    linkUrl="/dinerbot-t9"
                />

                <ProductCard
                    name="DINERBOT T8"
                    description="Robot compacto con tecnología CORE de KEENON, navega espacios de 55cm con sensores 3D y algoritmos IA patentados"
                    features={t8Features}
                    imageUrl="/assets/images/portadas/DINERBOT T8.png"
                    imageAlt="DINERBOT T8"
                    linkUrl="/dinerbot-t8"
                />

                <ProductCard
                    name="DINERBOT T3"
                    description="Robot con puertas automáticas higiénicas, 180L de capacidad y capas ajustables con tecnología KEENON"
                    features={t3Features}
                    imageUrl="/assets/images/portadas/DINERBOT T3.png"
                    imageAlt="DINERBOT T3"
                    linkUrl="/dinerbot-t3"
                />

                <ProductCard
                    name="DINERBOT T11"
                    description="Robot de servicio ultra avanzado con diseño futurista, interfaz táctil premium y tecnología de próxima generación"
                    features={t11Features}
                    imageUrl="/assets/images/portadas/DINERBOT T11.png"
                    imageAlt="DINERBOT T11"
                    linkUrl="/dinerbot-t11"
                />

                <ProductCard
                    name="MAYORDOMO W3"
                    description="Robot mayordomía con ascensor IoT, puertas automáticas higiénicas y 4 compartimentos para servicio sin contacto"
                    features={w3Features}
                    imageUrl="/assets/images/portadas/MAYORDOMO W3.png"
                    imageAlt="MAYORDOMO W3"
                    linkUrl="/mayordomo-w3"
                />
            </div>
        </div>
    </main>

    <Footer />
    <FloatingButtons />
</BaseLayout>
