---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import ProductCard from '../components/ProductCard.astro';
import ProductsHero from '../components/ProductsHero.astro';

// Metadatos SEO mejorados
const title =
    'Robots Industriales - Línea de Robots de Automatización Industrial';
const description =
    'Descubre nuestra línea de robots industriales: KENON-S300. Tecnología de vanguardia para automatización industrial con navegación inteligente, IA avanzada y diseño robusto para el sector industrial.';

// Datos de productos
const kenonFeatures = [
    'Capacidad de 300 kg con plataforma elevadora',
    'Múltiples modos de entrega inteligentes',
    'Navegación VSLAM sin cinta magnética',
    'Funcionamiento sin conexión fiable',
];

const proximoRobotFeatures = [
    'Próximamente disponible',
    'Tecnología avanzada',
    'Automatización industrial',
    'Más detalles pronto',
];
---

<BaseLayout title={title} description={description}>
    <style>
        .products-page {
            min-height: 100vh;
            padding: 0 20px 60px;
        }

        .products-container {
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 60px;
            margin-top: 1rem;
        }

        .product-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            padding: 40px;
            text-decoration: none;
            color: #f5f5f7;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }

        .product-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                135deg,
                rgba(30, 58, 138, 0.1) 0%,
                rgba(59, 130, 246, 0.1) 100%
            );
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .product-card:hover::before {
            opacity: 1;
        }

        .product-card:hover {
            border-color: rgba(30, 58, 138, 0.5);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .product-image {
            width: 200px;
            height: 200px;
            margin: 0 auto 30px;
            border-radius: 20px;
            overflow: hidden;
            position: relative;
            z-index: 1;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-name {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 1rem;
            position: relative;
            z-index: 1;
        }

        .product-description {
            font-size: 1rem;
            color: #a1a1aa;
            margin-bottom: 2rem;
            line-height: 1.6;
            position: relative;
            z-index: 1;
        }

        .product-features {
            list-style: none;
            text-align: left;
            margin-bottom: 2rem;
            position: relative;
            z-index: 1;
        }

        .product-features li {
            padding: 8px 0;
            padding-left: 20px;
            position: relative;
            color: #d1d1d6;
        }

        .product-features li::before {
            content: '✓';
            position: absolute;
            left: 0;
            color: #1e3a8a;
            font-weight: bold;
        }

        .cta-button {
            display: inline-block;
            padding: 12px 32px;
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
            color: white;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            z-index: 1;
        }

        .cta-button:hover {
            box-shadow: 0 8px 25px rgba(30, 58, 138, 0.4);
        }

        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: 1fr;
                gap: 40px;
            }

            .product-card {
                padding: 30px;
            }
        }
    </style>

    <HeaderApple />

    <main class="products-page">
        <ProductsHero
            title="Robots Industriales"
            description="Descubre nuestra línea completa de robots industriales autónomos diseñados para revolucionar la automatización industrial con tecnología de vanguardia."
        />

        <div class="products-container">
            <div class="products-grid">
                <ProductCard
                    name="KEENON-S300"
                    description="Robot industrial con capacidad de 300 kg, tecnología VSLAM avanzada y múltiples opciones de carga para funcionamiento continuo 24/7"
                    features={kenonFeatures}
                    imageUrl="/assets/images/portadas/KENON-S300.png"
                    imageAlt="KENON-S300"
                    linkUrl="/kenon-s300"
                />

                <ProductCard
                    name="Próximo Robot Industrial"
                    description="Nuevo robot industrial en desarrollo. Más información disponible próximamente."
                    features={proximoRobotFeatures}
                    imageUrl="/assets/images/portadas/novedades.png"
                    imageAlt="Próximo Robot Industrial"
                    linkUrl="#proximo-robot"
                />
            </div>
        </div>
    </main>

    <Footer />
    <FloatingButtons />
</BaseLayout>
