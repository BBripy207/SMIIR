---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderApple from '../components/Header_clean.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import ProductCard from '../components/ProductCard.astro';
import ProductsHero from '../components/ProductsHero.astro';

// Metadatos SEO mejorados
const title = 'Robots Limpiadores - Línea de Robots de Limpieza Autónoma';
const description =
    'Descubre nuestra línea de robots limpiadores autónomos. Tecnología de vanguardia para limpieza automatizada con navegación inteligente, IA avanzada y diseño especializado para el sector de limpieza.';

// Datos de productos
const kleenbotFeatures = [
    'Limpieza autónoma inteligente',
    'Navegación y mapeo avanzado',
    'Múltiples modos de limpieza',
    'Funcionamiento 24/7',
];

const kleenbootC30Features = [
    'Limpieza 3 en 1: barrido, aspirado y desempolvado',
    'Cobertura de 610mm de ancho',
    'Autonomía hasta 2500㎡ con carga completa',
    'Modos dual: automático y manual con mango extensible',
];

const kleenbootC40Features = [
    'Tecnología de limpieza premium',
    'Diseño robusto y duradero',
    'Sistema de navegación avanzado',
    'Operación silenciosa y eficiente',
];
---

<BaseLayout {title} {description}>
    <HeaderApple />

    <main class="main">
        <ProductsHero
            title="ROBOTS LIMPIADORES"
            description="Descubre nuestra línea completa de robots limpiadores autónomos diseñados para revolucionar la limpieza automatizada con tecnología de vanguardia."
        />

        <div class="products-container">
            <div class="products-grid">
                <ProductCard
                    name="KLEENBOT-C20"
                    description="Robot limpiador autónomo con tecnología de limpieza avanzada y navegación inteligente para espacios comerciales e industriales."
                    features={kleenbotFeatures}
                    imageUrl="/assets/images/KLEENBOT-C20/KLEENBOOT-C20.png"
                    imageAlt="KLEENBOT-C20"
                    linkUrl="/kleenbot-c20"
                />

                <ProductCard
                    name="KLEENBOOT-C30"
                    description="Robot limpiador 3 en 1 con barrido, aspirado y desempolvado. Autonomía hasta 2500㎡ y modos dual automático/manual con control remoto."
                    features={kleenbootC30Features}
                    imageUrl="/assets/images/KLEENBOOT-C30/KLEENBOOT-C30.png"
                    imageAlt="KLEENBOOT-C30"
                    linkUrl="/kleenboot-c30"
                />

                <ProductCard
                    name="KLEENBOOT-C40"
                    description="Robot limpiador de alto rendimiento con tecnología premium y diseño robusto para aplicaciones industriales exigentes."
                    features={kleenbootC40Features}
                    imageUrl="/assets/images/KLEENBOOT-C40/KLEENBOOT-C40.png"
                    imageAlt="KLEENBOOT-C40"
                    linkUrl="/kleenboot-c40"
                />
            </div>
        </div>
    </main>

    <Footer />
    <FloatingButtons />
</BaseLayout>

<style>
    .main {
        margin-top: 0;
    }

    .products-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 40px;
        align-items: start;
    }

    @media (max-width: 768px) {
        .products-grid {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .products-container {
            padding: 20px;
        }
    }
</style>
